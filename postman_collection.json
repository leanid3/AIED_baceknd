				},
				"url": {
					"raw": "{{ollama_url}}/api/pull",
					"host": ["{{ollama_url}}"],
					"path": ["api", "pull"]
				}
			}
		},
		{
			"name": "Ollama - Test Chat",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"model\": \"llama3.2\",\n  \"messages\": [\n    {\n      \"role\": \"user\",\n      \"content\": \"Создай простой SQL скрипт для создания таблицы users с полями id, name, email\"\n    }\n  ],\n  \"stream\": false\n}"
				},
				"url": {
					"raw": "{{ollama_url}}/api/chat",
					"host": ["{{ollama_url}}"],
					"path": ["api", "chat"]
				}
