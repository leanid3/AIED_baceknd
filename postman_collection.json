{
	"info": {
		"name": "AIEN Backend API",
		"description": "Коллекция для тестирования AIEN Backend API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Upload CSV File",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": []
						},
						{
							"key": "user_id",
							"value": "test-user-123",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/v1/files/upload/csv",
					"host": ["{{base_url}}"],
					"path": ["v1", "files", "upload", "csv"]
				}
			}
		},
		{
			"name": "Upload JSON File",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": []
						},
						{
							"key": "user_id",
							"value": "test-user-123",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/v1/files/upload/json",
					"host": ["{{base_url}}"],
					"path": ["v1", "files", "upload", "json"]
				}
			}
		},
		{
			"name": "Upload XML File",
			"request": {
				"method": "POST",
				"header": [],
